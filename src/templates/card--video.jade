div.card.card--video.js-card

  div.card__media.av-player.js-poster
    div.av-player__controls

      div.av-player__control.av-player__control--play.js-play
        i.icon.icon--play

      div.av-player__control.av-player__control--pause.js-pause
        i.icon.icon--pause

      div.av-player__control.av-player__control--scrubber
        div.progress.js-scrubber
          span.js-progress

      div.av-player__duration
        span.av-player__duration-passed.js-time-passed 00:00
        span.av-player__duration-divider /
        span.av-player__duration-remaining.js-time-remaining 00:00

      div.av-player__control.av-player__control--volume.js-volume
        i.icon.icon--volume
        i.icon.icon--muted
