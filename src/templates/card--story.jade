div.card.card--story.js-card

  div.card__media
    .card__cta
      i.icon.icon--story
    img(src="http://clients.tuimedia.com/bbc-assets/pills.jpg")

  div.card__content
    div.card__headline
      h3 How can a dummy pill have a real effect on your body?

    div.card__contributor
      div.card__contributor-img
        img(src="http://clients.tuimedia.com/bbc-assets/fong.jpg")
      div.card__contributor-details
        h4 Kevin Fong
        p Doctor / Presenter

  div.card__panel.js-panel
    p Donec posuere nulla eu lorem dapibus condimentum. Nullam sem magna, lacinia id egestas eu, viverra et felis.

  div.card__share-panel.share-panel.js-share-panel
    h4 Share...
    ul.share-panel__options
      li.share-panel__option
        i.icon.icon--digg
        span Digg
      li.share-panel__option
        i.icon.icon--google
        span Google
      li.share-panel__option
        i.icon.icon--reddit
        span Reddit
      li.share-panel__option
        i.icon.icon--twitter
        span Twitter
      li.share-panel__option
        i.icon.icon--facebook
        span Facebook
      li.share-panel__option
        i.icon.icon--linkedin
        span LinkedIn
      li.share-panel__option
        i.icon.icon--stumbleupon
        span Stumbleupon
      li.share-panel__option
        i.icon.icon--email
        span Email

  div.card__toolbar
    div.card__more-cta.js-more
      i.icon.icon--arrow-up
      i.icon.icon--close
      span.js-panel-trigger-label More info

    ul.card__social-icons
      li.card__social
        i.icon.icon--love
      li.card__social
        i.icon.icon--add
      li.card__social.js-share-cta
        i.icon.icon--share
