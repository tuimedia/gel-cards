div.card.card--poll.js-card(data-card-bg-url="optional-background-image-url")

  div.card__content

    div.card__poll-question

      h3 poll question

      p poll description

    ul.card__poll-options.js-poll
      li.card__poll-option.js-poll-option
        i.icon.icon--tick
        span poll option 1
      li.card__poll-option.js-poll-option
        i.icon.icon--tick
        span poll option 2
      li.card__poll-option.js-poll-option
        i.icon.icon--tick
        span poll option 3

  div.card__panel.js-panel
    p info panel content

  div.card__share-panel.share-panel.js-share-panel
    h4 Share...
    ul.share-panel__options
      li.share-panel__option
        i.icon.icon--digg
        span Digg
      li.share-panel__option
        i.icon.icon--google
        span Google
      li.share-panel__option
        i.icon.icon--reddit
        span Reddit
      li.share-panel__option
        i.icon.icon--twitter
        span Twitter
      li.share-panel__option
        i.icon.icon--facebook
        span Facebook
      li.share-panel__option
        i.icon.icon--linkedin
        span LinkedIn
      li.share-panel__option
        i.icon.icon--stumbleupon
        span Stumbleupon
      li.share-panel__option
        i.icon.icon--email
        span Email

  div.card__toolbar
    div.card__more-cta.js-more
      i.icon.icon--arrow-up
      i.icon.icon--close
      span.js-panel-trigger-label More info

    ul.card__social-icons
      li.card__social
        i.icon.icon--love
      li.card__social
        i.icon.icon--add
      li.card__social.js-share-cta
        i.icon.icon--share